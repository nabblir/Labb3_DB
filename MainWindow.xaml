<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="av" 
        x:Class="Labb3_DB.MainWindow"
        Title="Fantasy Kingdom Builder" 
        Height="800" 
        Width="1000"
        FontFamily="Segoe UI"
        Foreground="AntiqueWhite"
        Background="#34495E"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column with 2 Cards -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Left Card - Kingdom Overview -->
            <materialDesign:Card Grid.Row="0" Margin="10" Padding="15" 
                         Background="#4A5568" BorderBrush="Black">
                <StackPanel>
                    <TextBlock Text="Kingdom Overview" 
                              Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="Gold" 
                              Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    <TextBlock x:Name="GoldText" 
                              Text="0" 
                              Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                              Foreground="{DynamicResource PrimaryHueMidBrush}"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Gold/Second" 
                              Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    <TextBlock x:Name="GoldPerSecText" 
                              Text="0/sec" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                              Margin="0,0,0,15"/>

                    <Separator Margin="0,10"/>

                    <TextBlock Text="Population" 
                              Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    <TextBlock x:Name="PopulationText" 
                              Text="0" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Happiness" 
                              Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    <ProgressBar x:Name="HappinessBar" 
                                Value="100"
                                Background="DarkViolet"
                                Foreground="LawnGreen"
                                Minimum="0" 
                                Maximum="100"
                                Height="10"
                                Margin="0,5,0,5"/>
                    <TextBlock x:Name="HappinessText" 
                              Text="100%" 
                              Style="{StaticResource MaterialDesignBody2TextBlock}"
                              HorizontalAlignment="Right"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Bottom Left Card - Menu Buttons -->
            <materialDesign:Card Grid.Row="1" Margin="10" Padding="15" 
                         Background="#4A5568" BorderBrush="Black">
                <StackPanel>
                    <TextBlock Text="Actions" 
                              Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                              Margin="0,0,0,20" HorizontalAlignment="Center"/>

                    <Button Content="Save Game" 
                           Margin="0,5"
                           Height="40"
                           Style="{StaticResource MaterialDesignRaisedButton}" BorderBrush="Black"/>

                    <Button Content="Load Game" 
                           Margin="0,5"
                           Height="40"
                           Style="{StaticResource MaterialDesignRaisedButton}" BorderBrush="Black"/>

                    <Button Content="Settings" 
                           Margin="0,5"
                           Height="40" BorderBrush="Black"/>

                    <Button Content="Reset Kingdom" 
                           Margin="0,5"
                           Height="40"
                           Background="OrangeRed" BorderBrush="Black"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Center Panel - Buildings (Full Height) -->
        <materialDesign:Card Grid.Column="1" Margin="10" Padding="15" 
                     Background="#2C3E50" BorderBrush="Black">
            <StackPanel>
                <TextBlock Text="Buildings" 
                          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                          Margin="0,0,0,15" HorizontalAlignment="Center"/>
                <ListView x:Name="BuildingsListView" 
                         Height="500"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" 
                                              Style="{StaticResource MaterialDesignBody2TextBlock}"
                                              TextWrapping="Wrap"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Level" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                    <TextBlock Text="{Binding Level}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Count" Style="{StaticResource MaterialDesignCaptionTextBlock}"/>
                                    <TextBlock Text="{Binding Count}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="Upgrade" 
                                           Width="80" 
                                           Margin="5,0"/>
                                    <Button Content="Buy" 
                                           Width="80"
                                           Style="{StaticResource MaterialDesignRaisedButton}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </materialDesign:Card>

        <!-- Right Panel - Shop (Full Height) -->
        <materialDesign:Card Grid.Column="2" Margin="10" Padding="15" 
                     Background="#4A5568">
            <StackPanel>
                <TextBlock Text="Shop" 
                          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                          Margin="0,0,0,15" HorizontalAlignment="Center"/>

                <TextBlock Text="Available Buildings" 
                          Style="{StaticResource MaterialDesignBody1TextBlock}"
                          Margin="0,0,0,10"/>

                <ListView x:Name="ShopListView" Height="380">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,10">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Description}" 
                                          TextWrapping="Wrap"
                                          Margin="0,5"/>
                                <TextBlock Text="{Binding Cost, StringFormat=Cost: \{0\} gold}" 
                                          Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="{Binding Income, StringFormat=+\{0\} gold/sec}"/>
                                <Button Content="Purchase" 
                                       Margin="0,10,0,0"
                                       Style="{StaticResource MaterialDesignRaisedButton}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Separator Margin="0,15"/>

                <TextBlock Text="Events Log" 
                          Style="{StaticResource MaterialDesignBody1TextBlock}"
                          Margin="0,10,0,5" HorizontalAlignment="Center"/>
                <ScrollViewer Height="60" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="EventsLog" 
                              TextWrapping="Wrap"
                              Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                </ScrollViewer>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>