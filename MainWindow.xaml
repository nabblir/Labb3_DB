<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:commands="clr-namespace:Labb3_DB.Commands"
    mc:Ignorable="av" 
    x:Class="Labb3_DB.MainWindow"
    Title="Fantasy Kingdom Builder" 
    Height="800" 
    Width="1000"
    FontFamily="Segoe UI"
    Foreground="AntiqueWhite"
    Background="#34495E"
    WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <commands:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="450"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Kingdom Overview -->
            <materialDesign:Card Grid.Row="0" Margin="5" Padding="5" Background="#4A5568" BorderBrush="Black">
                <StackPanel>
                    <TextBlock Text="Kingdom Overview" 
                              Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                              Margin="0,0,0,5" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding KingdomName}" 
                              Style="{StaticResource MaterialDesignBody2TextBlock}"
                              Foreground="FloralWhite"
                              Margin="0,0,0,10" HorizontalAlignment="Center"/>

                    <TextBlock Text="Gold" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    <TextBlock Text="{Binding Gold, StringFormat={}{0:F0}}" 
                              Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                              Foreground="Gold" Margin="0,0,0,15"/>

                    <TextBlock Text="Gold/Second" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    <TextBlock Text="{Binding GoldPerSecond, StringFormat={}{0:F1}/sec}" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>

                    <Separator Margin="0,10"/>

                    <TextBlock Text="Population" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    <TextBlock Text="{Binding Population}" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>
                    <TextBlock Text="Max Population" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    <TextBlock Text="{Binding MaxPopulation}" 
                              Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>

                    <TextBlock Text="Happiness" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                    <ProgressBar Value="{Binding Happiness, Mode=OneWay}" 
                                Background="DarkSlateGray" Foreground="LawnGreen"
                                Minimum="0" Maximum="100" Height="10" Margin="0,5,0,5"/>
                    <TextBlock Text="{Binding Happiness, StringFormat={}{0:0}%}" 
                              Style="{StaticResource MaterialDesignBody2TextBlock}" HorizontalAlignment="Right"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- Menu Buttons -->
            <materialDesign:Card Grid.Row="1" Margin="5" Padding="5" Background="#4A5568" BorderBrush="Black">
                <StackPanel>
                    <TextBlock Text="Actions" 
                              Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                              Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <Button Content="💾 Save Game" Margin="0,5" Height="40"
                           Command="{Binding SaveGameCommand}"
                           Style="{StaticResource MaterialDesignRaisedButton}" BorderBrush="Black"/>
                    <Button Content="📂 Load Game" Margin="0,5" Height="40"
                           Command="{Binding LoadGameCommand}"
                           Style="{StaticResource MaterialDesignRaisedButton}" BorderBrush="Black"/>
                    <Button Content="⚙ Settings" Margin="0,5" Height="40" 
                           Command="{Binding SettingsCommand}" BorderBrush="Black"/>
                    <Button Content="⭮ Reset Kingdom" Margin="0,5" Height="40"
                           Command="{Binding ResetKingdomCommand}"
                           Background="Purple" BorderBrush="Black"/>
                    <Button Content="✖ Exit" Margin="0,5" Height="40"
                           Command="{Binding ExitCommand}"
                           Background="OrangeRed" BorderBrush="Black"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Center Panel - Owned Buildings -->
        <materialDesign:Card Grid.Column="1" Margin="5" Padding="5" Background="#2C3E50" BorderBrush="Black">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Owned Buildings" Grid.Row="0"
                          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                          Margin="0,0,0,15" HorizontalAlignment="Center"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Buildings}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="3"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Margin="5" Padding="10"
                                       Command="{Binding DataContext.OpenBuildingDialogCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                       CommandParameter="{Binding}"
                                       Style="{StaticResource MaterialDesignRaisedButton}"
                                       Height="Auto" HorizontalContentAlignment="Center">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="{Binding Name, Mode=OneWay}" 
                                                  FontWeight="Bold" FontSize="16"
                                                  TextAlignment="Center" Margin="0,0,0,5"/>
                                        <TextBlock Grid.Row="1" FontSize="14" TextAlignment="Center" Margin="0,0,0,10">
                                            <Run Text="Amount: "/>
                                            <Run Text="{Binding Count, Mode=OneWay}" FontWeight="Bold"/>
                                        </TextBlock>
                                        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center">
                                            <TextBlock FontSize="12" TextAlignment="Center" TextWrapping="Wrap"
                                                      Visibility="{Binding MaxPopulation, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                                                <Run Text="👥 Max Pop: "/>
                                                <Run Text="{Binding TotalMaxPopulation, Mode=OneWay}" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock FontSize="12" TextAlignment="Center" TextWrapping="Wrap"
                                                      Visibility="{Binding TotalHappinessIncrease, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                                                <Run Text="😊 Happiness: "/>
                                                <Run Text="{Binding TotalHappinessIncrease, Mode=OneWay}" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock FontSize="12" TextAlignment="Center" TextWrapping="Wrap"
                                                      Visibility="{Binding TotalIncome, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                                                <Run Text="💰 GPS: "/>
                                                <Run Text="{Binding TotalIncome, Mode=OneWay, StringFormat='{}{0:F1}'}" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock FontSize="12" TextAlignment="Center" TextWrapping="Wrap"
                                                      Visibility="{Binding TotalPopulationCost, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                                                <Run Text="👤 Population: "/>
                                                <Run Text="{Binding TotalPopulationCost, Mode=OneWay}" FontWeight="Bold"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </materialDesign:Card>

        <!-- Right Panel - Shop -->
        <materialDesign:Card Grid.Column="2" Margin="5" Padding="5" Background="#4A5568">
            <StackPanel>
                <TextBlock Text="Shop" 
                          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                          Margin="0,0,0,15" HorizontalAlignment="Center"/>
                <TextBlock Text="Available Buildings" 
                          Style="{StaticResource MaterialDesignBody1TextBlock}" Margin="0,0,0,10"/>
                <ListView ItemsSource="{Binding ShopBuildings}" Height="380" av:ItemsSource="{av:SampleData ItemCount=5}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,10" MaxWidth="200">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,5,0,10" Foreground="LightGray"/>
                                <TextBlock Text="{Binding CurrentCost, StringFormat=Cost: {0:F0} gold}" 
                                          Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock Text="{Binding PopulationCost, StringFormat=Population Cost: {0}}"
                                          Visibility="{Binding PopulationCost, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"
                                          Foreground="Orange"/>
                                <TextBlock Text="{Binding BaseIncome, StringFormat=+{0} gold/sec}"
                                           Foreground="Chocolate"/>
                                <Button Content="Purchase" Margin="0,5,0,0" Width="110" 
                                       Command="{Binding DataContext.BuyBuildingCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                       CommandParameter="{Binding}"
                                       Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Separator Margin="0,15"/>
                <TextBlock Text="Events Log" 
                          Style="{StaticResource MaterialDesignBody1TextBlock}"
                          Margin="0,0,0,0" HorizontalAlignment="Center"/>
                <ScrollViewer Height="230" VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="{Binding EventsLog}" TextWrapping="Wrap"
                              Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                </ScrollViewer>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Window>