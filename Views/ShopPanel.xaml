<UserControl x:Class="Labb3_DB.Views.ShopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:commands="clr-namespace:Labb3_DB.Commands">

    <UserControl.Resources>
        <commands:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </UserControl.Resources>

    <materialDesign:Card Margin="5" Padding="5" Background="#4A5568" BorderBrush="Black">
        <StackPanel>
            <TextBlock Text="Available Buildings" 
                      Style="{StaticResource MaterialDesignBody1TextBlock}" 
                      Margin="0,0,0,10"/>

            <ListView ItemsSource="{Binding ShopBuildings}" Height="380">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,10" MaxWidth="200">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Description}" 
                                      TextWrapping="Wrap" 
                                      Margin="0,5,0,10" 
                                      Foreground="LightGray"/>
                            <TextBlock Text="{Binding CurrentCost, StringFormat=Cost: {0:F0} gold}" 
                                      Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            <TextBlock Text="{Binding PopulationCost, StringFormat=Population Cost: {0}}"
                                      Visibility="{Binding PopulationCost, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}"
                                      Foreground="Orange"/>
                            <TextBlock Text="{Binding BaseIncome, StringFormat=+{0} gold/sec}"
                                       Foreground="Chocolate"/>
                            <Button Content="Purchase" 
                                   Margin="0,5,0,0" 
                                   Width="110" 
                                   Command="{Binding DataContext.BuyBuildingCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   CommandParameter="{Binding}"
                                   Style="{StaticResource MaterialDesignRaisedButton}" 
                                   HorizontalAlignment="Left"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </materialDesign:Card>
</UserControl>