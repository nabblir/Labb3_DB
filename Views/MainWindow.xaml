<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:views="clr-namespace:Labb3_DB.Views"
    x:Class="Labb3_DB.MainWindow"
    Title="Fantasy Kingdom Builder" 
    Height="800" 
    Width="1000"
    FontFamily="Segoe UI"
    Foreground="AntiqueWhite"
    Background="#34495E"
    WindowStartupLocation="CenterScreen">

    <materialDesign:DialogHost Identifier="MainDialogHost"
                              CloseOnClickAway="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <views:LeftPanel Grid.Column="0" DataContext="{Binding}"/>

            <!-- Center Panel -->
            <views:CenterPanel Grid.Column="1" DataContext="{Binding}"/>

            <!-- Right Panel -->
            <views:RightPanel Grid.Column="2" DataContext="{Binding}"/>
        </Grid>
    </materialDesign:DialogHost>
</Window>