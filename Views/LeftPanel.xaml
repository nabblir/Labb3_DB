<UserControl x:Class="Labb3_DB.Views.LeftPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="450"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Kingdom Overview -->
        <materialDesign:Card Grid.Row="0" Margin="5" Padding="5" Background="#4A5568" BorderBrush="Black">
            <StackPanel>
                <TextBlock Text="Kingdom Overview" 
                          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                          Margin="0,0,0,5" HorizontalAlignment="Center"/>
                <TextBlock Text="{Binding KingdomName}" 
                          Style="{StaticResource MaterialDesignBody2TextBlock}"
                          Foreground="FloralWhite"
                          Margin="0,0,0,10" HorizontalAlignment="Center"/>

                <TextBlock Text="Gold" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                <TextBlock Text="{Binding Gold, StringFormat={}{0:F0}}" 
                          Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                          Foreground="Gold" Margin="0,0,0,15"/>

                <TextBlock Text="Gold/Second" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                <TextBlock Text="{Binding GoldPerSecond, StringFormat={}{0:F1}/sec}" 
                          Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>

                <Separator Margin="0,10"/>

                <TextBlock Text="Population" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                <TextBlock Text="{Binding Population}" 
                          Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>
                <TextBlock Text="Max Population" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                <TextBlock Text="{Binding MaxPopulation}" 
                          Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>

                <TextBlock Text="Happiness" Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                <ProgressBar Value="{Binding Happiness, Mode=OneWay}" 
                            Background="DarkSlateGray" Foreground="LawnGreen"
                            Minimum="0" Maximum="100" Height="10" Margin="0,5,0,5"/>
                <TextBlock Text="{Binding Happiness, StringFormat={}{0:0}%}" 
                          Style="{StaticResource MaterialDesignBody2TextBlock}" HorizontalAlignment="Right"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Menu Buttons -->
        <materialDesign:Card Grid.Row="1" Margin="5" Padding="5" Background="#4A5568" BorderBrush="Black">
            <StackPanel>
                <TextBlock Text="Actions" 
                          Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                          Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <Button Content="💾 Save Game" Margin="0,5" Height="40"
                       Command="{Binding SaveGameCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}" BorderBrush="Black"/>
                <Button Content="📂 Load Game" Margin="0,5" Height="40"
                       Command="{Binding LoadGameCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}" BorderBrush="Black"/>
                <Button Content="⚙ Settings" Margin="0,5" Height="40" 
                       Command="{Binding SettingsCommand}" BorderBrush="Black"/>
                <Button Content="⭮ Reset Kingdom" Margin="0,5" Height="40"
                       Command="{Binding ResetKingdomCommand}"
                       Background="Purple" BorderBrush="Black"/>
                <Button Content="✖ Exit" Margin="0,5" Height="40"
                       Command="{Binding ExitCommand}"
                       Background="OrangeRed" BorderBrush="Black"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>