<UserControl x:Class="Labb3_DB.Views.RightPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Labb3_DB.Views">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="450"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Shop Section -->
        <TextBlock Grid.Row="0" Text="Shop" 
                  Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                  Margin="5,5,5,10" HorizontalAlignment="Center"/>

        <local:ShopPanel Grid.Row="1" DataContext="{Binding}"/>

        <!-- Events Section -->
        <local:EventsPanel Grid.Row="2" DataContext="{Binding}"/>
    </Grid>
</UserControl>